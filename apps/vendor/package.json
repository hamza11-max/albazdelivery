{
  "name": "@albaz/vendor",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "build:electron": "cross-env ELECTRON_BUILD=true next build",
    "start": "next start -p 3001",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build:electron && electron-builder",
    "electron:build:win": "npm run build:electron && electron-builder --win",
    "setup:icons": "node scripts/setup-icons.js",
    "kill:port": "powershell -ExecutionPolicy Bypass -File scripts/kill-port.ps1",
    "restart:dev": "powershell -ExecutionPolicy Bypass -File scripts/restart-dev.ps1",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=false eslint . --ext .js,.jsx,.ts,.tsx --config .eslintrc.json --no-eslintrc",
    "type-check": "tsc --noEmit",
    "test": "cross-env NODE_ENV=test jest --config ../../jest.config.ts",
    "test:watch": "cross-env NODE_ENV=test jest --config ../../jest.config.ts --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --config ../../jest.config.ts --coverage"
  },
  "dependencies": {
    "@albaz/auth": "*",
    "@albaz/shared": "*",
    "@albaz/ui": "*",
    "clsx": "^2.1.1",
    "lucide-react": "^0.454.0",
    "next": "^15.5.6",
    "next-auth": "^5.0.0-beta.25",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.5"
  },
  "devDependencies": {
    "@types/node": "^22.19.0",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "electron-updater": "^6.6.2",
    "typescript": "^5"
  }
}
